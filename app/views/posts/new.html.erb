<body>
<% if @post.errors.any? %>
  <% @post.errors.full_messages do |message|%>
<%= message %>
<% end %>
<% end %>
<%= form_with scope: :post, url: posts_path, method: :post do |form|%>
  <br><br><br>
<div class="mb-3">
  <div class="form-label"><%=form.label :title, "Title:   " %> </div>
  <div placeholder="Title"><%=form.text_field :title%><br><br></div>
</div>
  
<div class="mb-3">
  <div class="form-label"><%=form.label :content, "Content:   " %> </div>
  <div placeholder="Content"><%=form.text_field :content%><br><br></div>
</div>

<div class="mb-3">
  <div class="form-label"><%=form.label :images, "Content:   " %> </div>
  <div><%=form.file_field :images, multiple: true%><br><br></div>
</div>

  <div> <%=form.submit "Create Post"%></div>
<% end %>