<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
  </tr>
<% @posts.each do |post|%>
  <tr>
    <td><%= link_to post.title, post_path(post.id)%></td><br><br>
    <td><%=post.content.slice(0,20)%></td>
    <td><%= link_to "Delete-Post", post_path(post.id), method: :delete%></td>
    <td><%= link_to "Edit-Post", edit_post_path(post.id)%></td>    
  </tr>
<%end%>
</table>
<br><br><br>
<div>
  <%= link_to "Create-New-Post", new_post_path %>
  <%= link_to "Go-Back", root_path %>
</div>
</body>
