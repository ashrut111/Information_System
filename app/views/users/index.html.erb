<html>
  <% flash.each do |key, message|%>
    <%= message %>
  <% end %>

  <h1>Search for the users</h1> 
  <%= form_tag users_index_path, method: :get do %>
    <%= text_field_tag :search, "#{params[:search]}" %>
    <%= submit_tag "Search" %>
  <% end %>

  <% unless @users.blank? %>
    <ul>
      <% @users.each do |user|%>
        <li>
          <%= user.name %>
          <%= user.email %>
          <%=image_tag user.image%>
        </li>    
      <% end %>
    <ul>
  <% end %>
</html>
